<% content_for :title, "Admin - Post" %>

<div class="md:w-2/3 w-full">
  <h1 class="font-bold text-3xl mb-4"><%= @post.title.presence || "(no title)" %></h1>

  <div class="prose">
    <%= simple_format @post.content %>
  </div>

  <% if @post.attachments.attached? %>
    <div class="mt-4">
      <h2 class="font-semibold mb-2">Attachments</h2>
      <ul class="list-disc ml-6 space-y-1">
        <% @post.attachments.each do |file| %>
          <li>
            <%= link_to file.filename, rails_blob_path(file, disposition: "attachment") %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mt-6 space-x-2">
    <%= link_to "Edit", edit_admin_post_path(@post), class: "rounded px-3.5 py-2.5 bg-gray-100" %>
    <%= link_to "Back", admin_posts_path, class: "rounded px-3.5 py-2.5 bg-gray-100" %>
  </div>
</div>


